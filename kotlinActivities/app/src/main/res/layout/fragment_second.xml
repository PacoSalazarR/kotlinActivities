<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imViewSecundario"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:elegantTextHeight="true"
            android:id="@+id/txtViewSecundario"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imViewSecundario"
            app:layout_constraintBottom_toTopOf="@id/imViewStar"/>

        <ImageView
            android:id="@+id/imViewStar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_empty_star"
            app:layout_constraintStart_toEndOf="@+id/imViewHeart"
            app:layout_constraintEnd_toEndOf="@id/imViewSecundario"
            app:layout_constraintTop_toBottomOf="@id/txtViewSecundario"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/imViewHeart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_empty_heart"
            app:layout_constraintStart_toStartOf="@+id/imViewSecundario"
            app:layout_constraintEnd_toStartOf="@+id/imViewStar"
            app:layout_constraintTop_toTopOf="@+id/imViewStar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>